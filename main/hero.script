local function did_finish_entering_screen(self)
	msg.post(".", "acquire_input_focus")
end

function on_message(self, message_id, message, sender)
	if message == hash("enter_screen") then
		msg.post(".", "release_input_focus")

		local enters = {
			[hash("center")] = vmath.vector3(0, 0, 0),
			[hash("up")] = vmath.vector3(0, 16, 0),
			[hash("down")] = vmath.vector3(0, -16, 0),
			[hash("right")] = vmath.vector3(16, 0, 0),
			[hash("left")] = vmath.vector3(-16, 0, 0)
		}

		local p = go.get_position()
		local dp = enters[message.dir]
		local scroll_speed = 0.3

		print("hero#script p = " .. p)
		print("hero#script dp = " .. dp)

		go.animate(".", "position", go.PLAYBACK_ONCE_FORWARD, p + dp, go.EASING_LINEAR, scroll_speed, 0, did_finish_entering_screen)
	end
end

function on_input(self, action_id, action)
	if action_id == hash("north") then
		self.input.y = 1
	elseif action_id == hash("south") then 
		self.input.y = -1
	elseif action_id == hash("west") then 
		self.input.x = -1
	elseif action_id == hash("east") then 
		self.input.x = 1
	end

	if vmath.length(self.input) > 0 then
		self.moving = true
		self.direction = vmath.normalize(self.input)
	end
end

