function init(self)
	msg.post(".", "acquire_input_focus")

	self.moving = false
	self.input = vmath.vector3()
	self.direction = vmath.vector3(0, -1, 0)
	self.speed = 50
	self.animation = nil
end

function final(self)
	msg.post(".", "release_input_focus")
end

local function set_animation(self)
	local direction = "front"
	
	if self.direction.y > 0 then
		direction = "back"
	elseif self.direction.x > 0 then
		direction = "right"
	elseif self.direction.x < 0 then
		direction = "left"
	end

	local animation = hash("idle-" .. direction)

	if self.moving then
		animation = hash("walk-" .. direction)
	end

	if animation ~= self.animation then
		self.animation = animation
		msg.post("#sprite", "play_animation", { id = animation })
	end
end

function update(self, dt)
	if self.moving then
		local pos = go.get_position()

		pos = pos + self.direction * self.speed * dt
		go.set_position(pos)

		if pos.y > 192 then
			msg.post("/game#script", "load_screen", { direction = hash("up") })
		elseif pos.y < -32 then
			msg.post("/game#script", "load_screen", { direction = hash("down") })
		elseif pos.x > 320 then
			msg.post("/game#script", "load_screen", { direction = hash("right") })
		elseif pos.x < -32 then
			msg.post("/game#script", "load_screen", { direction = hash("left") })
		end
	end

	set_animation(self)

	self.input.x = 0
	self.input.y = 0
	self.moving = false
end

